<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp" tools:context=".MainActivity"
    android:background="#fff"
    android:orientation="vertical"
   >
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/shop2"
        android:src="@drawable/shop2"
        android:layout_gravity="center"
        android:scaleType="fitXY"
       />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/avatar"
        android:src="@drawable/avatar"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/email"
        android:hint="Your email address"
        android:layout_below="@+id/logo"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
       />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:hint="Your password"
        android:layout_below="@+id/email"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Login to GCC"
        android:textStyle="normal"
        android:id="@+id/login_btn"
        android:layout_gravity="center"
        android:textColor="@color/login_btn_text"
        android:background="@color/login_btn_background"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="OR"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/login_btn"
        android:id="@+id/OR"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot your password?"
        android:layout_gravity="center"
        android:id="@+id/textView2"
        android:layout_below="@+id/OR"
        android:textColor="@color/forgot_password"
        android:layout_marginTop="10dp"
        />

</LinearLayout>
